<HTML>
	<HEAD>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
		<TITLE>LoginPage</TITLE>
	</HEAD>
	
	<BODY>
		<div style="position : absolute; top : 30%; left : 25%; width : 50%;">	
			<div class="ui middle aligned center aligned grid">
				<div class="column">
					<h2 class="ui teal image header">
						<div class="content">
							Log-in to your account
						</div>
					</h2>
					<form id="logInForm" class="ui large form" action="http://127.0.0.1:21002/logInAction" method="post">						
						<div class="ui stacked segment">
							<div class="field">
								<div class="ui left icon input">
									<i class="user icon"></i>
									<input type="text" name="id" placeholder="ID" maxlength="20">
								</div>
							</div>
							<div class="field">
								<div class="ui left icon input">
									<i class="lock icon"></i>
									<input type="password" name="pw" placeholder="Password" maxlength="20">
								</div>
							</div>							
							<div class="ui fluid large teal button" onclick="onLoginClick();">
								Log-in
							</div>
						</div>
					</form>

					<div class="ui message">
						New to us? &nbsp <a href="./signUpPage">Sign Up</a>
					</div>
				</div>
			</div>
		</div>

		<script>
			function onLoginClick(){
				var form = document.getElementById("logInForm");
				var regExp = /[\{\}\[\]\/?.,;:|\)*~`!^\-_+<>@\#$%&\\\=\(\'\"]/;

				if(form.id.value == ""){
					alert("id is empty");
				}
				else if(regExp.test(form.id.value)){
					alert("can't use special character");
				}
				else if(form.pw.value == ""){
					alert("password id empty");
				}
				else{
					form.submit();
				}
			}
		</script>
	</BODY>
</HTML>